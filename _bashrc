# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific aliases and functions
export AKKA_HOME=/usr/local/typesafe-stack
export ANT_HOME=/usr/share/ant

alias py=python
alias rb=ruby
alias ply=/usr/local/play/play

# load pybrew/rvm into a shell session "as a function"
[[ -s $HOME/.pythonbrew/etc/bashrc ]] && source $HOME/.pythonbrew/etc/bashrc
[[ -s "/home/egbutter/.rvm/scripts/rvm" ]] && source "/home/egbutter/.rvm/scripts/rvm"

export PATH=/home/egbutter/.pythonbrew/bin:/usr/local/bin:/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/sbin:/usr/local/typesafe-stack/bin:/usr/local/sbt:/usr/local/play:/home/egbutter/.bashscripts:/home/egbutter/.rvm/bin:/home/egbutter/.local/bin:/home/egbutter/bin:/usr/local/heroku-client
